#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main()
{
	double a = 0;
	double b = 1;
	double c = 2;
	double summ;
	summ = a + b + c;

	

	while (true)
	{
		a = rand() % 1000 + 1;
		b = rand() % 1000 + 1;
		c = rand() % 1000 + 1;
		if ((1000 == a + b + c) && (pow(a, 2) + pow(b, 2) == pow(c, 2)))
		{
			break;
		}
		
	}

	cout << " a " << a << " b " << b << " c " << c<< "\n";
	cout << a*b*c;
	_getch();
	return 0;

}
