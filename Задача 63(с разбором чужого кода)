#include <iostream>

#include <conio.h>
#include <cmath>

using namespace std;

int digits(double num)
{
	int digit;
	int predigit;
	predigit = log10(num);
	digit = floor(predigit) + 1;
	

	return digit;
}


int main() {
	int counter = 0;

	for (int i = 1; i < 100; i++)
	{
		for (int j = 1; j < 100; j++) 
		{
			long double checking;
			checking = pow(i, j);
				if (digits(checking) == j)
				{
					cout << checking <<" "<< i <<" "<< j<< "\n";
					
					counter++;
				}
		}
		
	}
	cout << counter;
	
	
	_getch();
	
	
}
